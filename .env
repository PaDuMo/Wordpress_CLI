# Ruta del documento raíz
WP_PATH="/var/www/html"

# Configuración de MySQL
DB_NAME="wordpress_db"
DB_USER="wordpress_user"
DB_PASS="wordpress_password"
DB_HOST="localhost"

# Configuración del sitio WordPress
SITE_URL="example.com"          # Cambia por tu dominio o IP
SITE_TITLE="IAW"
ADMIN_USER="admin"
ADMIN_PASS="admin_password"
ADMIN_EMAIL="admin@example.com"

# Localización de WordPress
WP_LOCALE="es_ES"               # es_ES por defecto

# Usuario y grupo del servidor web (Ubuntu/Debian)
WWW_USER="www-data"
WWW_GROUP="www-data"

# Email para Let's Encrypt
LETSENCRYPT_EMAIL="admin@example.com"

# Nombre del vhost de Apache (coincide con SITE_URL si usas dominio)
APACHE_VHOST_SERVER_NAME="example.com"
APACHE_VHOST_DOCROOT="/var/www/html"

# Permalinks
WP_PERMALINK_STRUCTURE="/%postname%/"
